generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  reviews     Review[]
}

model Review {
  id        String  @id @default(cuid())
  text      String
  rating    Int
  product   Product @relation(fields: [productId], references: [id])
  productId String
}
